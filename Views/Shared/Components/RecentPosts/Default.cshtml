@using MyBlog.Models.Application.Features.Posts.Queries.GetAllMostViewedPost;
@model List<GetAllMostViewedPostQueryResponse>

<div class="col-lg-12">
    <div class="sidebar-item recent-posts">
        <div class="sidebar-heading">
            <h2>Most Viewed Posts</h2>
        </div>
        <div class="content">
            <ul>
                @if(Model.Count == 0)
                {
                    <li class="text-sm text-decoration-none">There is no posts</li>

                }
                else
                {
                    @foreach (var post in Model)
                    {
                        <li>
                            <a asp-controller="Blogs" asp-action="BlogDetails" asp-route-id="@post.Id">
                                <h6>@post.Name</h6>
                                <span>@post.PublishDate.ToString("MM/dd/yyyy")</span>
                            </a>
                        </li>
                    }
                }
               
            </ul>
        </div>
    </div>
</div>